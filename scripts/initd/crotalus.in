prog="crotalus"

# Source function library.
. /etc/rc.d/init.d/functions

# Allow anyone to run status
if [ "$1" = "status" ] ; then
  status $prog
  RETVAL=$?
  exit $RETVAL
fi

# Check that we're a privileged user
test $EUID = 0  ||  exit 4

# Check that networking is up.
[ "${NETWORKING}" = "no" ] && exit 1

test -f /etc/sysconfig/crotalus  && . /etc/sysconfig/crotalus

prefix="@prefix@"
exec_prefix="@exec_prefix@"
daemon="@sbindir@/$prog"
EXTRA_OPTIONS=""

RETVAL=0
PID_FILE=/var/run/crotalus.pid

start() {
  test -x $daemon  || exit 5

  echo -n $"Starting $prog: "

  daemon $daemon "$EXTRAOPTIONS"
  RETVAL=$?
  echo
  if test $RETVAL = 0 ; then
    touch /var/lock/subsys/crotalus
  fi
  return $RETVAL
}

stop() {
  echo -n $"Stopping $prog: "
  killproc $prog
  RETVAL=$?
  echo
  rm -f /var/lock/subsys/crotalus
  return $RETVAL
}

restart() {
  stop
  sleep 1
  start
}

reload() {
  echo -n $"Reloading configuration: "  
  killproc $prog -HUP
  RETVAL=$?
  echo
  return $RETVAL
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  reload|force-reload)
    restart
    ;;
  condrestart|try-restart)
    if [ -f /var/lock/subsys/crotalus ] ; then
      restart
    fi
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart|reload|force-reload|condrestart|try-restart|status}"
    RETVAL=2
esac

exit $RETVAL
